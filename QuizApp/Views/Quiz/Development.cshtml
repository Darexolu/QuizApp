@model List<QuizApp.Models.Question>
<h2>Welcome to your Software Development Examination</h2>
<h4>Questions and Options</h4>
@using (Html.BeginForm("CalculatePercentage", "Quiz", FormMethod.Post))
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <h4>@Model[i].Text</h4>
            @foreach (var option in Model[i].Answers)
            {
                <div>
                    <input type="checkbox" name="submittedQuestions[@i].Answers[@option.Id].IsCorrect" value="true" /> @option.Text
                </div>
            }
        </div>
    }
    <button type="submit">Submit</button>
}